@page
@model BulkyWdbRazor_temp.Pages.Categorys.IndexModel




<div class="container"> 
	<div class="row pt-4 pb-3">
		<div class="col-6"> 
			<h2 class="text-primary">
				category list
			</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-page="Categories/Create"  class=" btn btn-primary">
					<i class="bi bi-plus"></i>	create new category
			</a>
		</div>
	</div>
		<table class=" table table-bordered table-striped">
	<thead>
		<tr>		
			<th>
				category Name	
			</th>
			<th>
			    Display Order
			</th>
			<th>

			</th>
		</tr>
	</thead>	
	<tbody>
		@foreach(var obj in Model.CategoryList.OrderBy(u=>u. DisplayOrder))
		{
		<tr>
			<td>
				@obj.Name
			</td>
			<td>@obj.DisplayOrder</td>
				<td>
					<div class="w-75 btn-group" role="group">
							<a asp-page="Category"  asp-route-id="@obj.Id" class="btn btn-primary mx-2">
								<i class="bi bi-pencil-fill"></i>Edit
							</a>
							<a asp-page="Category/delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
									<i class="bi bi-trash-fill"></i> Delete
							</a>
					</div>
				</td>
		</tr>
		}
	</tbody>
</table>
</div>

